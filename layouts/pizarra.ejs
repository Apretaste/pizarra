<%
var menu = [
    {link: '', caption: 'Muro'},
    {link: 'GLOBAL', caption: 'Global'},
    {link: 'POPULARES', caption: 'Tendencia'}];
%>

<!-- TABS -->
<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <% menu.forEach(function(e) { %>
                <% var active = typeof title != "undefined" && title == e.caption ? 'active' : '' %>
                <li class="tab">
                    <a href="#" class="green-text <%= active %>"
                       onclick="apretaste.send({'command':'PIZARRA <%= e.link %>'})"
                    >
                        <%= e.caption %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>
</div>

<!-- CONTENT -->
<div class="row">
    {{APP_TEMPLATE_CODE}}
</div>

<!-- MODALS -->
<div id="searchModal" class="modal bottom-sheet">
    <div class="modal-content">
        <div class="input-field">
            <input type="text" id="search" class="validate">
            <label for="search">Buscar</label>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
        <a onclick="searchText()" class="waves-effect waves-green btn-flat">Buscar</a>
    </div>
</div>

<div id="themifyModal" class="modal bottom-sheet">
    <div class="modal-content">
        <div class="input-field">
            <input type="text" id="theme" class="validate">
            <label for="theme">Asignar tema</label>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-light btn-flat">Cancelar</a>
        <a onclick="themifyNote()" class="modal-close waves-effect waves-green btn-flat">Asignar</a>
    </div>
</div>

<div id="deleteConfirmModal" class="modal">
    <div class="modal-content">
        <p>Â¿Desea borrar esta nota de pizarra?</p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-light btn-flat grey-text text-darken-2">Cancelar</a>
        <a onclick="deleteNote()" class="modal-close waves-effect waves-green btn-flat"
           style="font-weight: 500">Aceptar</a>
    </div>
</div>

