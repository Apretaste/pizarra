<%
var menu = [
    {link: '', caption: 'Muro'},
    {link: 'GLOBAL', caption: 'Global'},
    {link: 'POPULARES', caption: 'Tendencia'},
    {link: 'INFLUENCERS', caption: 'Influencers'}
];
%>

<!-- TABS -->
<div class="row" style="margin-bottom: 0.75rem">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <% menu.forEach(function(e) { %>
                <% var active = typeof title != "undefined" && title == e.caption ? 'active' : '' %>
                <li class="tab">
                    <a href="#" class="green-text <%= active %>"
                       onclick="apretaste.send({'command':'PIZARRA <%= e.link %>'})"
                    >
                        <%= e.caption %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>
</div>

<!-- CONTENT -->
<div class="row">
    {{APP_TEMPLATE_CODE}}
</div>

<div id="shareModal" class="modal">
    <div class="modal-content">
        <div class="input-field">
            <textarea id="shareMessage" class="materialize-textarea"></textarea>
            <label for="shareMessage">Escriba un texto para compartir</label>
        </div>
        <ul class="collection one-line preview">
            <li class="collection-item avatar">
                <i class="fas material-icons circle" id="shareIcon"></i>
                <span class="title" id="shareText"></span>
            </li>
        </ul>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
        <a onclick="share.send()" class="modal-close waves-effect waves-green green-text btn-flat">Enviar</a>
    </div>
</div>

<%- '<serviceImgPath data="{{APP_SERVICE_PATH}}/images/"></serviceImgPath>' %>
