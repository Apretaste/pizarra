<%if(note.gender=="M") color="blue-text"; else if(note.gender=="F") color="pink-text"; else color="black-text"%>
<div class="card" id="<%=note.id%>">
	<div class="card-content">
		<a class="<%=color%>" onclick="apretaste.send({'command': 'PIZARRA PERFIL', 'data': {'username':'@<%=note.username%>'}});">
			<b>@<%=note.username%></b>
		</a>
		<%if(note.online){%>
			&nbsp;<i class="tiny material-icons green-text">brightness_1</i>
		<%}%>
		&middot;
		<small class="grey-text text-darken-2"><%=note.location%></small>&middot;
		<small class="grey-text text-darken-2"><%=note.inserted%></small>
		<div class="divider"></div>
		<p><%-note.text%></p>
		<small class="topics">
			<%note.topics.forEach((topic) =>{%>
			<a class="grey-text text-darken-2" onclick="apretaste.send({'command': 'PIZARRA','data':{'search':'<%=topic%>'}})">
				#<%=topic%>
			</a>&nbsp;
			<%});%>
		</small>
	</div>
	<div class="card-action">
		<a class="like" onclick="like('<%=note.id%>','like');">
			<i class="material-icons tiny">thumb_up</i>
			<span ><%=note.likes%></span>
		</a>
		<a class="unlike" onclick="like('<%=note.id%>','unlike')">
			<i class="material-icons tiny">thumb_down</i>
			<span><%=note.unlikes%></span>	
		</a>
		<%if(note.canmodify){%>
			<%if(note.topics.length < 3){%>
			<a class="modal-trigger themifyButton" href="#themifyModal" onclick="activeNote = '<%=note.id%>';">
				<span><b>#</b></span>
			</a>
			<%}%>
		<a class="modal-trigger" href="#deleteConfirmModal" onclick="activeNote = '<%=note.id%>';">
			<i class="material-icons tiny">cancel</i>
		</a>
		<%}%>
	</div>
</div>

<ul class="collection" id="comments">
	<%var color;%>
	<%note.comments.forEach(comment => {%>
	<%if(comment.gender=="M") color="blue-text"; else if(comment.gender=="F") color="pink-text"; else color="black-text"%>
		<li class="collection-item">
		<a class="<%=color%>" onclick="apretaste.send({'command': 'PIZARRA PERFIL', 'data': {'username':'@<%=comment.username%>'}});">
			<b>@<%=comment.username%></b>
		</a>&middot;
		<small class="grey-text"><%=comment.location%></small>&middot;
		<small class="grey-text"><%=comment.inserted%></small>
		<p><%-comment.text%></p>
		</li>
	<%});%>
</ul>

<div class="fixed-action-btn">
	<a href="#newCommentModal" class="btn-floating btn-large waves-effect waves-light modal-trigger">
		<i class="large material-icons">comment</i>
	</a>
</div>

<div id="newCommentModal" class="modal bottom-sheet">
	<div class="modal-content">
		<div class="input-field">
          <textarea id="comment" class="materialize-textarea" oninput="commentLengthValidate()"></textarea>
		  <label for="comment">Escriba su comentario</label>
		  <span class="helper-text">Restante: 250</span>
    	</div>
	</div>	
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
		<a onclick="sendComment()" class="modal-close waves-effect waves-green btn-flat">Comentar</a>
	</div>
</div>