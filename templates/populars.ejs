<div class="row" style="margin-top: 0.25rem">
    <div class="col s12" id="popular-users">
        <% populars.ranking.forEach(function (popular) { %>
            <div class="col s4 m2"
                 onclick="apretaste.send({'command':'PERFIL', 'data': {'username':'@<%= popular.username %>'}});">
                <div class="card user-card center-align">
                    <div class="content">
                        <div class="person-avatar circle" face="<%= popular.avatar %>"
                             color="<%= popular.avatarColor %>"
                             size="40" online="1">
                        </div>
                        <span class="<%= popular.gender %>">@<%= popular.username %></span>
                    </div>
                    <div class="action grey lighten-2 green-text">
                        <span class="chip medium clear"><i class="fas fa-fire"></i> <%= popular.experience %></span>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="col s12 center-align" id="popular-topics">
        <div class="cloud">
            <% topics.forEach(function(topic) { %>
                <% if (topic.name.trim() == '') return; %>
                <span onclick="apretaste.send({'command':'PIZARRA GLOBAL','data':{'search':'#<%= topic.name %>'}})"
                      class="chip tag<%= topic.size %>"><i class="fa fa-hashtag"></i> <%= topic.name %></span>
            <% }) %>
        </div>
    </div>
</div>