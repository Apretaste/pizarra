<div class="row">
    <div class="col s12 center-align" id="popular-topics">
        <% topics.forEach(function(topic){ %>
            <a style="font-size: <%= topic.size + 3 %>px;" class="green-text"
               onclick="apretaste.send({'command':'PIZARRA GLOBAL','data':{'search':'#<%= topic.name %>'}})">#<%= topic.name %>  </a>
        <% }); %>
    </div>

    <div class="col s12" id="popular-users">
        <% populars.forEach(function (popular) { %>
            <% var color = popular.gender == "M" ? "green-text" : popular.gender == "F" ? "pink-text" : "black-text"; %>
            <div class="col s6 m4 l3">
                <div class="center-align mini-card valign-wrapper center-align"
                     onclick="apretaste.send({'command':'PERFIL', 'data': {'username':'@<%= popular.username %>'}});">
                    <div style="width: 100%;">
                        <div class="person-avatar circle" face="<%= popular.avatar %>"
                             color="<%= popular.avatarColor %>"
                             size="50">
                            <% if(popular.online == "1"){ %>
                                <i class="material-icons online-icon">brightness_1</i>
                            <% } %>
                        </div>
                        <p class="<%= color %> text-medium" style="margin: 0 8px">@<%= popular.username %></p>
                        <p class="text-medium" style="margin: 0 8px">â˜…<%= popular.reputation %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>


</div>